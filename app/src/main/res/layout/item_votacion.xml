<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_md"
    app:cardCornerRadius="@dimen/radius_large"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:animateLayoutChanges="true">

        <!-- Header del card -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_md">

            <!-- Estado badge -->
            <com.google.android.material.chip.Chip
                android:id="@+id/textEstado"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="@string/status_open"
                android:textSize="@dimen/text_size_xs"
                android:clickable="false"
                app:chipBackgroundColor="@color/success_background"
                app:chipStrokeColor="@color/success_color"
                app:chipStrokeWidth="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Abierta" />

            <!-- Menú opciones -->
            <ImageView
                android:id="@+id/iconInfo"
                android:layout_width="@dimen/icon_size_medium"
                android:layout_height="@dimen/icon_size_medium"
                android:src="@drawable/ic_more_vert"
                app:tint="@color/text_secondary"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Título -->
            <TextView
                android:id="@+id/textTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_sm"
                android:text="@string/election_title_hint"
                android:textAppearance="@style/TextAppearance.CEEAPP.Headline2"
                android:textColor="@color/text_primary"
                android:maxLines="2"
                android:ellipsize="end"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/iconInfo"
                app:layout_constraintTop_toBottomOf="@id/textEstado"
                tools:text="Elección de representante estudiantil 2025" />

            <!-- Progress bar para votaciones activas -->
            <LinearLayout
                android:id="@+id/progressContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/spacing_md"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textTitle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/spacing_xs">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/participation"
                        android:textAppearance="@style/TextAppearance.CEEAPP.Body2"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/textProgress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/zero_percent"
                        android:textAppearance="@style/TextAppearance.CEEAPP.Body2"
                        android:textColor="@color/primary_blue"
                        android:fontFamily="@font/inter_semibold" />
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progressVotos"
                    style="@style/Widget.CEEAPP.ProgressBar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/progress_height"
                    android:progress="0"
                    android:max="100" />
            </LinearLayout>

            <!-- Texto del ganador para votaciones cerradas -->
            <TextView
                android:id="@+id/textWinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_md"
                android:text="@string/winner_prefix"
                android:textAppearance="@style/TextAppearance.CEEAPP.Body1"
                android:textColor="@color/success_color"
                android:fontFamily="@font/inter_semibold"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/progressContainer"
                tools:text="Ganador: Opción A" />

            <!-- Botón de votar -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonVotar"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="@string/vote_now"
                android:textAllCaps="false"
                android:textSize="@dimen/text_size_sm"
                android:paddingHorizontal="@dimen/spacing_lg"
                app:cornerRadius="20dp"
                android:layout_marginTop="@dimen/spacing_md"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textWinner" />

            <!-- Icono expandir/colapsar -->
            <ImageView
                android:id="@+id/iconExpand"
                android:layout_width="@dimen/icon_size_medium"
                android:layout_height="@dimen/icon_size_medium"
                android:src="@drawable/ic_expand_more"
                app:tint="@color/text_secondary"
                android:layout_marginTop="@dimen/spacing_md"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/buttonVotar" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Sección expandible con opciones -->
        <LinearLayout
            android:id="@+id/layoutExpandable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:background="@color/background_gray"
            android:paddingHorizontal="@dimen/spacing_md"
            android:paddingVertical="@dimen/spacing_md">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/voting_options"
                android:textAppearance="@style/TextAppearance.CEEAPP.Body2"
                android:textColor="@color/text_secondary"
                android:fontFamily="@font/inter_semibold"
                android:layout_marginBottom="@dimen/spacing_sm" />

            <LinearLayout
                android:id="@+id/layoutOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>