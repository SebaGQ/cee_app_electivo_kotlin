<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dialog_width"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/spacing_md"
    app:cardCornerRadius="@dimen/dialog_corner_radius"
    app:cardElevation="@dimen/elevation_dialog"
    app:cardBackgroundColor="@color/surface_color">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_dialog">

            <!-- Layout de Votación -->
            <LinearLayout
                android:id="@+id/layoutVote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Título de la votación -->
                <TextView
                    android:id="@+id/textPregunta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.CEEAPP.Headline2"
                    android:textAlignment="center"
                    android:layout_marginBottom="@dimen/spacing_md"
                    android:lineSpacingMultiplier="1.2" />

                <!-- Instrucción de selección -->
                <TextView
                    android:id="@+id/textInstruccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/vote_instruction"
                    android:textAppearance="@style/TextAppearance.CEEAPP.Body2"
                    android:textAlignment="center"
                    android:layout_marginBottom="@dimen/spacing_lg" />

                <!-- Contenedor de opciones con RadioGroup -->
                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_lg"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="@dimen/spacing_xs" />

                <!-- Botones de acción -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonCancel"
                        style="@style/Widget.CEEAPP.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/button_cancel"
                        android:layout_marginEnd="@dimen/spacing_sm" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonVote"
                        style="@style/Widget.CEEAPP.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/button_vote"
                        android:enabled="false" />

                </LinearLayout>

            </LinearLayout>

            <!-- Layout de Confirmación -->
            <LinearLayout
                android:id="@+id/layoutConfirmation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone"
                android:padding="@dimen/spacing_xl">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imageCheck"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_check_circle_24"
                    android:tint="@color/primary_blue"
                    android:layout_marginBottom="@dimen/spacing_md" />

                <TextView
                    android:id="@+id/textConfirmation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/vote_saved"
                    android:textAppearance="@style/TextAppearance.CEEAPP.Headline2"
                    android:textAlignment="center"
                    android:layout_marginBottom="@dimen/spacing_lg" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonOk"
                    style="@style/Widget.CEEAPP.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/button_ok" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</com.google.android.material.card.MaterialCardView>