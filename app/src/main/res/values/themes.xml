<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.CEEAPP" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent_color</item>
        <item name="colorSecondaryVariant">@color/accent_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/surface_color</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Error color -->
        <item name="colorError">@color/error_color</item>
        <item name="colorOnError">@color/white</item>

        <!-- Typography -->
        <item name="fontFamily">@font/inter</item>
        <item name="android:fontFamily">@font/inter</item>

        <!-- Shape -->
<!--        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Material3.SmallComponent</item>-->
<!--        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Material3.MediumComponent</item>-->
<!--        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Material3.LargeComponent</item>-->

        <!-- Elevation -->
        <item name="elevationOverlayEnabled">true</item>
        <item name="elevationOverlayColor">@color/primary_dark</item>
    </style>

    <style name="Theme.CEEAPP.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.CEEAPP.Button" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:elevation">4dp</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="Widget.CEEAPP.Button.TextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="rippleColor">@color/primary_light</item>
    </style>

    <style name="Widget.CEEAPP.Button.OutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="strokeColor">@color/primary_blue</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <!-- Card Style -->
    <style name="Widget.CEEAPP.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/surface_color</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="contentPadding">16dp</item>
    </style>

    <!-- TextInputLayout Style -->
    <style name="Widget.CEEAPP.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary_blue</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="hintTextColor">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="errorTextColor">@color/error_color</item>
        <item name="errorIconDrawable">@drawable/ic_error</item>
    </style>

    <!-- Typography Styles -->
    <style name="TextAppearance.CEEAPP.Headline1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="TextAppearance.CEEAPP.Headline2" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>

    <style name="TextAppearance.CEEAPP.Body1" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
    </style>

    <style name="TextAppearance.CEEAPP.Body2" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>

    <style name="TextAppearance.CEEAPP.Caption" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_tertiary</item>
    </style>

    <!-- Chip Style -->
    <style name="Widget.CEEAPP.Chip" parent="Widget.Material3.Chip.Assist">
        <item name="chipCornerRadius">20dp</item>
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="chipStrokeColor">@color/primary_light</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="chipIconTint">@color/primary_blue</item>
        <item name="closeIconTint">@color/text_secondary</item>
    </style>

    <!-- Dialog Style -->
    <style name="Theme.CEEAPP.Dialog" parent="Theme.Material3.DayNight.Dialog">
        <item name="android:windowBackground">@drawable/bg_dialog</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="dialogCornerRadius">24dp</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <!-- Bottom Navigation Style -->
    <style name="Widget.CEEAPP.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconTint">@drawable/bottom_nav_colors</item>
        <item name="itemTextColor">@drawable/bottom_nav_colors</item>
        <item name="itemRippleColor">@color/primary_light</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemHorizontalTranslationEnabled">false</item>
    </style>

    <!-- FAB Style -->
    <style name="Widget.CEEAPP.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="tint">@color/white</item>
        <item name="backgroundTint">@color/primary_blue</item>
        <item name="elevation">8dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="borderWidth">0dp</item>
    </style>

    <!-- Progress Bar Style -->
    <style name="Widget.CEEAPP.ProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/custom_progress</item>
        <item name="android:minHeight">8dp</item>
        <item name="android:maxHeight">8dp</item>
    </style>

    <!-- Switch Style -->
    <style name="Widget.CEEAPP.Switch" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="colorControlActivated">@color/primary_blue</item>
        <item name="colorSwitchThumbNormal">@color/switch_thumb_normal</item>
        <item name="android:colorForeground">@color/switch_track_normal</item>
    </style>

    <style name="Theme.CEEAPP.AppBarOverlay" parent="ThemeOverlay.Material3.ActionBar" />
    <style name="Theme.CEEAPP.PopupOverlay" parent="ThemeOverlay.Material3.Dialog" />
</resources>