<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CEEAPP" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryContainer">@color/primary_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/background_gray</item>
        <!-- rest of attributes remain the same -->
    </style>

    <style name="Theme.CEEAPP.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CEEAPP.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CEEAPP.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
